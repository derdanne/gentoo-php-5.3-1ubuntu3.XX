+-			 ? sizeof nh32				\
+-			 : sizeof nh64)
+-#define xnh_type	(clazz == ELFCLASS32			\
+-			 ? elf_getu32(swap, nh32.n_type)	\
+-			 : elf_getu32(swap, nh64.n_type))
